<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/randevusactagiris"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/girisEmail"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="33dp"
        android:background="@color/white"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:drawableLeft="@drawable/email_logo"
        android:ems="10"
        android:hint="Email:"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kayitOl"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="162dp"
        android:background="@color/material_dynamic_neutral40"
        android:text="Kayıt Ol"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/girisisimSoyisim"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="34dp"
        android:background="@color/white"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:drawableLeft="@drawable/profil_logo"
        android:ems="10"
        android:hint="İsim/Soyisim:"

        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisEmail" />

    <Button
        android:id="@+id/girisYap"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_marginStart="143dp"
        android:layout_marginEnd="147dp"
        android:layout_marginBottom="28dp"
        android:background="@color/white"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:text="Giriş Yap"

        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/kayitOl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/girisSifre"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:background="@color/white"
        android:backgroundTint="@color/material_dynamic_neutral40"
        android:drawableLeft="@drawable/kilit_logo"
        android:ems="10"
        android:hint="Şifre:"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisisimSoyisim" />

</androidx.constraintlayout.widget.ConstraintLayout>